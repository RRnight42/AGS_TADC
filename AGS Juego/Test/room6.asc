// room script file

function room_AfterFadeIn()
{
  switch(GameProgress){
    case 0: GameIntro(); break;
    case 1: GloinksCutscene(); break;
    case 2: Banquete(); break;
  }
}

function room_Load()
{
  CanPlayerMove=false;
  
  
  GameProgress=1;
  
  
  Intro.Visible= (GameProgress == 0);
  Bedroom.Visible= (GameProgress == 1);
  Circus.Visible=false;
  Hole.Visible=false;
  
  //  Llamar personajes
  switch(GameProgress){
    case 0:
        cJax.ChangeRoom(6, 440, 342, eDirectionDown);
        cZooble.ChangeRoom(6, 300, 342, eDirectionDown);
        cGangle.ChangeRoom(6, 552, 352, eDirectionDown);
        cRagatha.ChangeRoom(6, 200, 342, eDirectionDown);
        cKinger.ChangeRoom(6, 100, 352, eDirectionDown);
        cCaine.ChangeRoom(6, 165, 228, eDirectionDown);
        break;
    case 1:
        cPlayer.x = 430;
        cPlayer.y = 220;
        cGangle.ChangeRoom(6, 540, 400, eDirectionDown);
        cKinger.ChangeRoom(6, 590, 400, eDirectionDown);
        cGangle.Transparency=100;
        cKinger.Transparency=100;
        break;
  }
  
  cZooble.ManualScaling=true;
  cZooble.Scaling= 85;
  Intro.ManualScaling=true;
  Intro.Scaling= 125;
  Bedroom.ManualScaling=true;
  Bedroom.Scaling= 125;
}
