int timer = 0;
//CREDITOS
int credits = 0;
function room_RepExec()
{
  if(timer < 200){

FadeInCredits(credits);


  }else {

FadeOutCredits(credits);
  }
  timer++;
  
  
  if(timer > 300){
    
    timer = 0;
    credits++;
    }
  
  
}


